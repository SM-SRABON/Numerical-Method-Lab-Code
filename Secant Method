#include <iostream>
#include <cmath>
using namespace std;

double f(double x) {
    return x*x*x - x - 2;
}

int main() {
     cout << "Name: Md Awal Sheikh" << endl;
    cout << "ID: 11240321772" << endl;
    cout << "Secant Method Implementation\n" << endl;

    double x0 = 1, x1 = 2, x2;
    while (fabs(f(x1)) > 0.0001) {
        x2 = x1 - f(x1) * (x1 - x0) / (f(x1) - f(x0));
        x0 = x1;
        x1 = x2;
    }
    cout << "Root: " << x1 << endl;
    return 0;
}
