#include <iostream>
#include <cmath>
using namespace std;

double f(double x) {
    return x*x*x - x - 2; 
}

int main() {
     cout << "Name: Md Awal Sheikh" << endl;
    cout << "ID: 11240321772" << endl;
    cout << "Regula Falsi Method Implementation\n" << endl;

    double a = 1, b = 2, c;
    while (fabs(f((a*f(b)-b*f(a))/(f(b)-f(a)))) > 0.0001) {
        c = (a*f(b) - b*f(a)) / (f(b) - f(a));
        if (f(a) * f(c) < 0)
            b = c;
        else
            a = c;
    }
    cout << "Root: " << (a*f(b) - b*f(a)) / (f(b) - f(a)) << endl;
    return 0;
}
