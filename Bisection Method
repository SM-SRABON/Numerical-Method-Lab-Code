#include <iostream>
#include <cmath>
using namespace std;

double f(double x) {
    return x*x*x - x - 2; 
}

int main() {
     cout << "Name: Md Awal Sheikh" << endl;
    cout << "ID: 11240321772" << endl;
    cout << "Bisection Method Implementation\n" << endl;

    double a = 1, b = 2, mid;
    while (fabs(b - a) > 0.0001) {
        mid = (a + b) / 2;
        if (f(a) * f(mid) < 0)
            b = mid;
        else
            a = mid;
    }
    cout << "Root: " << (a + b) / 2 << endl;
    return 0;
}
