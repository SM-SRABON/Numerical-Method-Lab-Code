#include <iostream> 
using namespace std; 
 
int main() { 
    cout << "Name: Md Awal Sheikh" << endl; 
    cout << "ID: 11240321772" << endl; 
    cout << "Gauss-Jordan Method Implementation\n" << endl; 
 
    int n; 
    cout << "Enter number of equations: "; 
    cin >> n; 
    double a[10][11]; 
 
    cout << "Enter augmented matrix:\n"; 
    for (int i = 0; i < n; i++) 
        for (int j = 0; j <= n; j++) 
            cin >> a[i][j]; 
 
    for (int i = 0; i < n; i++) { 
        double diag = a[i][i]; 
        for (int j = 0; j <= n; j++) 
            a[i][j] /= diag; 
        for (int k = 0; k < n; k++) { 
            if (k != i) { 
                double factor = a[k][i]; 
                for (int j = 0; j <= n; j++) 
                    a[k][j] -= factor * a[i][j]; 
            } 
        } 
    } 
 
    cout << "Solution:\n"; 
    for (int i = 0; i < n; i++) 
        cout << "x" << i + 1 << " = " << a[i][n] << endl; 
 
    return 0; 
} 
